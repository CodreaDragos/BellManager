<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BellManager.Controls.TopNavigationBar"
             x:Name="TopNavBar">
    
    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="NavButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="#666"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Margin" Value="4,0"/>
            </Style>
            
            <Style x:Key="ActiveNavButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4285F4"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Margin" Value="4,0"/>
            </Style>
            
            <Style x:Key="LogoutButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#FF4444"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Margin" Value="4,0"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <Frame BackgroundColor="White" 
           CornerRadius="0" 
           HasShadow="True" 
           Padding="16,12,16,12"
           Margin="0,0,0,0">
        <Grid ColumnDefinitions="*,*,*,Auto" RowDefinitions="Auto">
            <!-- Alarms Tab -->
            <Button Grid.Column="0" 
                    x:Name="AlarmsButton"
                    Text="Alarms" 
                    Style="{StaticResource ActiveNavButtonStyle}"
                    Clicked="OnAlarmsClicked" />
            
            <!-- Churches Tab -->
            <Button Grid.Column="1" 
                    x:Name="ChurchesButton"
                    Text="Churches" 
                    Style="{StaticResource NavButtonStyle}"
                    Clicked="OnChurchesClicked"
                    IsVisible="False" />
            
            <!-- Assign Tab -->
            <Button Grid.Column="2" 
                    x:Name="AssignButton"
                    Text="Assign" 
                    Style="{StaticResource NavButtonStyle}"
                    Clicked="OnAssignClicked"
                    IsVisible="False" />
            
            <!-- Log Out Button -->
            <Button Grid.Column="3" 
                    x:Name="LogoutButton"
                    Text="Log Out" 
                    Style="{StaticResource LogoutButtonStyle}"
                    Clicked="OnLogoutClicked" />
        </Grid>
    </Frame>
</ContentView>
