<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BellManager.Pages.LoginPage"
             Title="Login"
             BackgroundColor="#F5F7FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="HeaderStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#4285F4"/>
                <Setter Property="CornerRadius" Value="0"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="Padding" Value="20,60,20,30"/>
            </Style>
            
            <Style x:Key="CardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="CornerRadius" Value="24"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="Margin" Value="20,0,20,20"/>
                <Setter Property="Padding" Value="30,40"/>
            </Style>
            
            <Style x:Key="InputStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="#1A1A1A"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="PlaceholderColor" Value="#999"/>
                <Setter Property="Margin" Value="0,20,0,0"/>
            </Style>
            
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4285F4"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="Margin" Value="0,20,0,0"/>
            </Style>
            
            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="#4285F4"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
                <Setter Property="BorderColor" Value="#4285F4"/>
                <Setter Property="BorderWidth" Value="2"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid RowDefinitions="Auto,*">
            <!-- Header Section -->
            <Frame Grid.Row="0" Style="{StaticResource HeaderStyle}">
                <StackLayout>
                    <Label Text="BellManager" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label Text="Welcome back!" 
                           FontSize="16" 
                           TextColor="#E3F2FD" 
                           HorizontalOptions="Center"
                           Margin="0,8,0,0"/>
                </StackLayout>
            </Frame>

            <!-- Login Form Card -->
            <Frame Grid.Row="1" Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="0">
                    <Label Text="LOGIN" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#4285F4" 
                           HorizontalOptions="Center"
                           Margin="0,0,0,30"/>
                    
                    <!-- Username/Email Field -->
                    <StackLayout Margin="0,0,0,0">
                        <Label Text="Email or Username" 
                               FontSize="14" 
                               TextColor="#666" 
                               Margin="0,0,0,5"/>
                        <Entry x:Name="UsernameEntry" 
                               Placeholder="Enter your email or username"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Password Field -->
                    <StackLayout Margin="0,0,0,0">
                        <Label Text="Password" 
                               FontSize="14" 
                               TextColor="#666" 
                               Margin="0,20,0,5"/>
                        <Entry x:Name="PasswordEntry" 
                               Placeholder="Enter your password"
                               IsPassword="True"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Login Button -->
                    <Button Text="LOGIN" 
                            Clicked="OnLoginClicked" 
                            Style="{StaticResource PrimaryButtonStyle}"/>
                    
                    <!-- Register Button -->
                    <Button Text="CREATE ACCOUNT" 
                            Clicked="OnRegisterClicked" 
                            Style="{StaticResource SecondaryButtonStyle}"/>
                    
                    <!-- Error Label -->
                    <Label x:Name="ErrorLabel" 
                           TextColor="#F44336" 
                           IsVisible="False"
                           FontSize="14"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>


