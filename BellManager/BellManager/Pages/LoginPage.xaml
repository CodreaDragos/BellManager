<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:BellManager.Helpers"
             x:Class="BellManager.Pages.LoginPage"
             Title="Login"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F7FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="HeaderStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#5527ad"/>
                <Setter Property="CornerRadius" Value="0"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="Padding" Value="20,20,20,30"/>
            </Style>
            
            <Style x:Key="CardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="CornerRadius" Value="24"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>

            <Style x:Key="InputFrameStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#F0F2F5"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="HasShadow" Value="False"/>
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#5527ad"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="#5527ad"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid RowDefinitions="Auto, *">
            <!-- Header Section -->
            <Frame Grid.Row="0" Style="{StaticResource HeaderStyle}">
                <Grid>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="0,40,0,0">
                        <Image Source="bell_icon.png" HeightRequest="80" WidthRequest="80"/>
                        <Label Text="{Binding Source={x:Static helpers:LocalizationResourceManager.Instance}, Path=[WelcomeBack]}" 
                               TextColor="White" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               HorizontalTextAlignment="Center"
                               Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                    
                    <!-- Language Switcher -->
                    <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="Start" Spacing="16">
                        <Label Text="ðŸ‡¬ðŸ‡§" 
                               FontSize="30"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEnglishClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="ðŸ‡·ðŸ‡´" 
                               FontSize="30"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnRomanianClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </Grid>
            </Frame>

            <!-- Login Form Section -->
            <Frame Grid.Row="1" BackgroundColor="White" 
                   CornerRadius="30" 
                   Margin="24,-40,24,24" 
                   Padding="24,40,24,40"
                   HasShadow="True">
                <VerticalStackLayout Spacing="20">
                    <Label Text="{Binding Source={x:Static helpers:LocalizationResourceManager.Instance}, Path=[LoginTitle]}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#5527ad" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,20"/>

                    <!-- Email/Username Input -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="{Binding Source={x:Static helpers:LocalizationResourceManager.Instance}, Path=[EmailOrUsername]}" TextColor="#666" FontSize="14" FontAttributes="Bold"/>
                        <Frame Style="{StaticResource InputFrameStyle}">
                            <Entry x:Name="UsernameEntry"
                                   Placeholder="{Binding Source={x:Static helpers:LocalizationResourceManager.Instance}, Path=[EmailPlaceholder]}"
                                   TextColor="#333"
                                   PlaceholderColor="#999"
                                   HeightRequest="50"
                                   Margin="15,0"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Password Input -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="{Binding Source={x:Static helpers:LocalizationResourceManager.Instance}, Path=[Password]}" TextColor="#666" FontSize="14" FontAttributes="Bold"/>
                        <Frame Style="{StaticResource InputFrameStyle}">
                            <Entry x:Name="PasswordEntry"
                                   Placeholder="{Binding Source={x:Static helpers:LocalizationResourceManager.Instance}, Path=[PasswordPlaceholder]}"
                                   IsPassword="True"
                                   TextColor="#333"
                                   PlaceholderColor="#999"
                                   HeightRequest="50"
                                   Margin="15,0"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Buttons -->
                    <Button Text="{Binding Source={x:Static helpers:LocalizationResourceManager.Instance}, Path=[LoginButton]}" 
                            Clicked="OnLoginClicked"
                            Style="{StaticResource PrimaryButtonStyle}"/>

                    <Button Text="{Binding Source={x:Static helpers:LocalizationResourceManager.Instance}, Path=[CreateAccountButton]}" 
                            Clicked="OnRegisterClicked"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                    
                    <!-- Error Label -->
                    <Label x:Name="ErrorLabel" 
                           TextColor="#F44336" 
                           IsVisible="False"
                           FontSize="14"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>
