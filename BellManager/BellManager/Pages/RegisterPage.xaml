<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BellManager.Pages.RegisterPage"
             Title="Register"
             BackgroundColor="#F5F7FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="HeaderStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#4285F4"/>
                <Setter Property="CornerRadius" Value="0"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="Padding" Value="20,60,20,30"/>
            </Style>
            
            <Style x:Key="CardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="CornerRadius" Value="24"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="Margin" Value="20,0,20,20"/>
                <Setter Property="Padding" Value="30,40"/>
            </Style>
            
            <Style x:Key="InputStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="#1A1A1A"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="PlaceholderColor" Value="#999"/>
                <Setter Property="Margin" Value="0,20,0,0"/>
            </Style>
            
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4285F4"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="Margin" Value="0,20,0,0"/>
            </Style>
            
            <Style x:Key="LinkStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#4285F4"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,20,0,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid RowDefinitions="Auto,*">
            <!-- Header Section -->
            <Frame Grid.Row="0" Style="{StaticResource HeaderStyle}">
                <StackLayout>
                    <Label Text="BellManager" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label Text="Join us today!" 
                           FontSize="16" 
                           TextColor="#E3F2FD" 
                           HorizontalOptions="Center"
                           Margin="0,8,0,0"/>
                </StackLayout>
            </Frame>

            <!-- Register Form Card -->
            <Frame Grid.Row="1" Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="0">
                    <Label Text="REGISTER" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#4285F4" 
                           HorizontalOptions="Center"
                           Margin="0,0,0,30"/>
                    
                    <!-- Email Field -->
                    <StackLayout Margin="0,0,0,0">
                        <Label Text="Email" 
                               FontSize="14" 
                               TextColor="#666" 
                               Margin="0,0,0,5"/>
                        <Entry x:Name="EmailEntry" 
                               Placeholder="Enter your email address"
                               Keyboard="Email"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Username Field -->
                    <StackLayout Margin="0,0,0,0">
                        <Label Text="Username" 
                               FontSize="14" 
                               TextColor="#666" 
                               Margin="0,20,0,5"/>
                        <Entry x:Name="UsernameEntry" 
                               Placeholder="Choose a username"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Password Field -->
                    <StackLayout Margin="0,0,0,0">
                        <Label Text="Password" 
                               FontSize="14" 
                               TextColor="#666" 
                               Margin="0,20,0,5"/>
                        <Entry x:Name="PasswordEntry" 
                               Placeholder="Create a secure password"
                               IsPassword="True"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Create Account Button -->
                    <Button Text="CREATE ACCOUNT" 
                            Clicked="OnRegisterClicked" 
                            Style="{StaticResource PrimaryButtonStyle}"/>
                    
                    <!-- Login Link -->
                    <Label Text="Already have an account? Sign In" 
                           Style="{StaticResource LinkStyle}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLoginTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                    
                    <!-- Error Label -->
                    <Label x:Name="ErrorLabel" 
                           TextColor="#F44336" 
                           IsVisible="False"
                           FontSize="14"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>


